set -ex

su root -c 'apt install sudo'
wget https://neuron.yale.edu/ftp/neuron/versions/v7.6/7.6.2/nrn-7.6.2.x86_64-linux-py-36-35-27.deb
sudo apt update
sudo apt install ./nrn-7.6.2.x86_64-linux-py-36-35-27.deb
rm nrn-7.6.2.x86_64-linux-py-36-35-27.deb

export PYTHONPATH="/usr/local/nrn/lib/python/:$PYTHONPATH"